# Deny access to .htaccess.
<files ~ "^\.ht">
  Require all denied
</files>

# Hide Index of /.
Options -Indexes

# SSL/TLS
RewriteEngine On
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# www
RewriteCond %{HTTP_HOST} !^(www|sub)\.
RewriteRule .* https://www.%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

